{
  "name": "screen-go",
  "version": "3.0.0",
  "private": true,
  "main": "appDir/main/main.js",
  "author": "iLx1",
  "description": "图片取模软件",
  "scripts": {
    "start": "vite && electron .",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "electron:build": "rimraf dist && vite build && electron-builder -wml --x64 --arm64",
    "electron:build:win": "rimraf dist && vite build && electron-builder --win",
    "electron:build:mac": "rimraf dist && vite build && electron-builder --mac --x64 --arm64",
    "electron:build:linux": "rimraf dist && vite build && electron-builder --linux --x64 --arm64",
    "build:icons": "electron-icon-builder --input=./public/icon.png --output=./public/ --flatten"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "win32",
        "darwin",
        "linux",
        "current"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.1.0",
    "ilx1-x-box": "^1.0.0",
    "ilx1-x-tool": "^1.2.6",
    "pinia": "^2.1.6",
    "tui-image-editor": "^3.15.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.17.17",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.4.0",
    "electron": "35.2.0",
    "electron-builder": "^26.0.12",
    "ilx1-x-style": "^1.1.2",
    "naive-ui": "^2.43.2",
    "npm-run-all2": "^6.0.6",
    "rimraf": "^5.0.5",
    "sass": "^1.89.0",
    "sass-loader": "^13.3.3",
    "typescript": "~5.2.0",
    "vite": "^5.4.19",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "vue-tsc": "^1.8.11"
  },
  "build": {
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "appId": "com.xxx.ScreenGo",
    "productName": "ScreenGo",
    "copyright": "Copyright © 2023 iLx1",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "icon": "./public/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "asarUnpack": [
        "**/node_modules/electron-store/**/*"
      ],
      "artifactName": "${productName}-Setup-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "mimeTypes": [
        "x-scheme-handler/screen-go"
      ],
      "icon": "./public/icons/256x256.png",
      "target": [
        "deb"
      ],
      "category": "Utility",
      "maintainer": "iLx1 <your@email.com>",
      "synopsis": "Multi-Pad Application",
      "description": "Cross-platform multi-functional pad application",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "mac": {
      "identity": null,
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "./public/icons/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "electron-builder/entitlements.plist",
      "entitlementsInherit": "electron-builder/entitlements.plist",
      "provisioningProfile": "electron-builder/comalibabaslobs.provisionprofile",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150
        }
      ]
    },
    "files": [
      "./dist",
      "./electron",
      "./appDir"
    ],
    "asar": true,
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/icons/icon.ico",
      "uninstallerIcon": "./public/icons/icon.ico",
      "installerHeaderIcon": "./public/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
