{
  "name": "screen-go",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main/main.js",
  "author": "iLx1",
  "description": "图片取模软件",
  "scripts": {
    "start": "vite | electron .",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "electron:build": "vite build && electron-builder",
    "build:test": "node ./electron/controller/checkPackage.js"
  },
  "dependencies": {
    "color": "^4.2.3",
    "detect-libc": "^2.0.2",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.0",
    "optional": "^0.1.4",
    "pinia": "^2.1.6",
    "pngparse": "^2.0.1",
    "semver": "^7.5.4",
    "sharp": "0.32.6",
    "tui-image-editor": "^3.15.3",
    "color-convert": "^2.0.1",
    "color-string": "^1.9.0",
    "color-name": "~1.1.4",
    "simple-swizzle": "^0.2.2",
    "is-arrayish": "^0.3.1",
    "graceful-fs": "^4.2.0",
    "jsonfile": "^6.0.1",
    "universalify": "^2.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.17.17",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.4.0",
    "electron": "^26.3.0",
    "electron-builder": "22.10.0",
    "node-sass": "^9.0.0",
    "npm-run-all2": "^6.0.6",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "typescript": "~5.2.0",
    "vite": "^4.4.9",
    "vite-plugin-optimizer": "^1.4.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.11"
  },
  "build": {
    "appId": "com.iLx1.app",
    "productName": "ScreenGo",
    "copyright": "Copyright © 2023 iLx1",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "icon": "./public/icon.ico",
      "asarUnpack": [
        "**/node_modules/sharp/**/*"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "icon": "./public/icon.ico",
      "target": "AppImage"
    },
    "mac": {
      "icon": "./public/icon.ico"
    },
    "files": [
      "./dist",
      "./electron"
    ],
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/icon.ico",
      "uninstallerIcon": "./public/icon.ico",
      "installerHeaderIcon": "./public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "iLx11",
        "repo": "screen-go"
      }
    ]
  }
}
